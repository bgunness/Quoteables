doctype html
html.single-page(lang='en')
    include includes/head
    body.bg-light.d-flex.flex-column.single-page.justify-content-between
        include includes/header
        .container.d-flex.flex-column.align-items-center.justify-content-center
            .card#quote-card
                if msg
                    .card-img-overlay.d-flex.align-items-center.flex-column.bg-light
                        h3.card-title No inspirational quotes found
                        p.card-text Add one on the 
                            span 'View All'
                            |   page!
                else
                    .card-img-overlay.d-flex.align-items-center.flex-column.bg-light
                        h4.font-italic "#{quote.body}"
                        p.card-text #{quote.source}
            if url == 'inspiration'
                div(class="btn-group mt-5" role="group")
                    a(href=`/${url}`).btn.btn-info.btn-secondary.my-auto.p-3.capitalize More #{url}
                    a(href='/inspiration-all').btn.btn-info.btn-secondary.my-auto.p-3.capitalize View All
            else if url == 'advice' || 'jokes'
                div(class="btn-group mt-5" role="group")
                    a(href=`/${url}`).btn.btn-info.btn-secondary.my-auto.p-3.capitalize More #{url}
        include includes/body-scripts
        include includes/footer