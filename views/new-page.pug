doctype html
html.single-page(lang='en')
    head
        title Quoteables
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous")
        link(rel="stylesheet" href="/static/stylesheets/styleB.css")
    body.bg-light.single-page.d-flex.flex-column.justify-content-between
        include includes/header
        .container.d-flex.flex-column.align-items-center
            form.new-quote-form.d-flex.flex-column.justify-content-center(action="/new-submit", method="post")
                .input-group
                    .input-group-prepend
                        span(class="input-group-text") Body
                    textarea(class="form-control input-body" name="body" placeholder="Body of Quote" aria-label="Body text" value="body")
                .input-group
                    .input-group-prepend
                        span(class="input-group-text") Source
                    textarea(class="form-control input-source" name="source" placeholder="Author" aria-label="Source text")
                input(type="hidden" name="id")
                .btn-group.align-self-center.mt-5
                    button.btn.btn-info.modal-submit-btn(type='submit') Save changes
            form(action="/inspiration-all" method="get")
                button.btn.btn-outline-info.mt-1 Back
        include includes/error.pug
        include includes/body-scripts
        include includes/footer