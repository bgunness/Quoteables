doctype html
html.single-page(lang='en')
    head
        title Quoteables
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous")
        link(rel="stylesheet" href="/static/stylesheets/styleB.css")
    body.bg-light.d-flex.flex-column.single-page.justify-content-between
        .row
            .col
                include includes/header
        .container
            .row.my-5
                .col-md-4.col-sm-9.col-xs-5.mx-auto.my-1
                    .card.index-card
                        img.card-img(src='https://picsum.photos/id/338/313/435' alt='Kanye West')
                        .card-img-overlay.card-img-overlay-index
                            h2.card-title.font-weight-light Kanye West 
                            a(href="/kanye" class="stretched-link") 
                .col-md-4.col-sm-9.col-xs-5.mx-auto.my-1
                    .card.index-card
                        img.card-img(src='https://picsum.photos/id/1011/313/435' alt='Advice')
                        .card-img-overlay.card-img-overlay-index
                            h2.card-title.text-dark.font-weight-light Advice 
                            a(href="/advice" class="stretched-link")
                .col-md-4.col-sm-9.col-xs-5.mx-auto.my-1
                    .card.index-card
                        img.card-img(src='https://picsum.photos/id/1020/313/435' alt='Inspiration')
                        .card-img-overlay.card-img-overlay-index
                            h2.card-title.text-dark.font-weight-light Inspiration
                            a(href="/inspiration" class="stretched-link")
        include includes/body-scripts
        include includes/footer