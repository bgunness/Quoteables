                            a(href="/kanye" class="stretched-link") 
                .col-md-4.col-sm-9.col-xs-5.mx-auto.my-1
                    .card.index-card
                        img.card-img(src='https://picsum.photos/id/1011/313/435' alt='Advice')
                        .card-img-overlay.card-img-overlay-index
                            h2.card-title.text-dark.font-weight-light Advice 
                            a(href="/advice" class="stretched-link")
                .col-md-4.col-sm-9.col-xs-5.mx-auto.my-1
                    .card.index-card
                        img.card-img(src='https://picsum.photos/id/1020/313/435' alt='Inspiration')
                        .card-img-overlay.card-img-overlay-index
                            h2.card-title.text-dark.font-weight-light Inspiration
                            a(href="/inspiration" class="stretched-link")
